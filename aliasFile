# AWS
function find_ip() {
  aws ec2 describe-instances --filters "Name=network-interface.addresses.private-dns-name,Values=$1" \
  --query 'Reservations[*].Instances[*].InstanceId' --output text 
}

function aws_ssm() {
  aws ssm start-session --target $(find_ip $1)
}
